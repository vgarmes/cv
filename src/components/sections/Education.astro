---
import Section from "@/components/Section.astro";
import { formatDatesOnlyYear } from "@/utils/date";
import { education } from "@cv";
---

<Section title="Education">
  <div class="flex flex-col gap-8">
    {
      education.map(({ institution, area, startDate, endDate, url }) => {
        const dates = formatDatesOnlyYear(startDate, endDate);
        return (
          <article>
            <header class="flex flex-col space-y-1.5">
              <div class="flex flex-col justify-between gap-x-2 gap-y-1 text-base sm:flex-row sm:items-center">
                <h3 class="leading-none font-semibold">{area}</h3>
                <time class="text-muted-foreground text-sm">{dates}</time>
              </div>
              <h4 class="text-muted-foreground leading-none">
                <a
                  href={url}
                  title={`See ${institution}`}
                  target="_blank"
                  class="hover:underline"
                >
                  {institution}
                </a>
              </h4>
            </header>
          </article>
        );
      })
    }
  </div>
</Section>

---
import Section from "@/components/Section.astro";
import Phone from "@/icons/Phone.astro";
import LinkedIn from "@/icons/LinkedIn.astro";
import X from "@/icons/X.astro";
import Mail from "@/icons/Mail.astro";
import GitHub from "@/icons/GitHub.astro";
import { basics } from "@cv";
import type { SocialIcon } from "@/types";
import IconButton from "@/components/ui/IconButton.astro";
import WorldMap from "@/icons/WorldMap.astro";

const { name, image, label, location, email, phone, profiles, url } = basics;

const { city, region, url: locationUrl } = location;

const SOCIAL_ICONS: SocialIcon = {
  GitHub,
  LinkedIn,
};

const printInfo = [email, phone, url].filter(Boolean);
---

<Section>
  <div
    class="flex flex-col-reverse items-center justify-between gap-4 sm:flex-row sm:items-start"
  >
    <div
      class="flex flex-col items-center gap-3 pr-0 text-center sm:items-start sm:pr-8 sm:text-start"
    >
      <div>
        <h1 class="text-lg font-medium">{name}</h1>
        <p class="text-balance">{label}</p>
      </div>

      <div
        class="text-muted-foreground hidden flex-col flex-wrap gap-x-6 text-sm print:mt-2 print:flex"
      >
        <a
          href={`mailto:${email}`}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-x-2 [&>svg]:size-3"
        >
          <Mail />
          <span>{email}</span>
        </a>
        <a
          href={`tel:${phone}`}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-x-2 [&>svg]:size-3"
        >
          <Phone />
          <span>{phone}</span>
        </a>
        <a
          href={url}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-x-2 [&>svg]:size-3"
        >
          <WorldMap />
          <span>{url}</span>
        </a>
      </div>
      <footer class="flex gap-x-1 pt-1 font-mono text-sm print:hidden">
        {
          email && (
            <IconButton link={`mailto:${email}`} title="Email">
              <Mail />
            </IconButton>
          )
        }
        {
          phone && (
            <IconButton link={`tel:${phone}`} title="Phone number">
              <Phone />
            </IconButton>
          )
        }
        {
          url && (
            <IconButton link={url} title="Website">
              <WorldMap />
            </IconButton>
          )
        }
        {
          profiles.map(({ network, url }) => {
            const Icon = SOCIAL_ICONS[network];
            return (
              <IconButton link={url} title={network}>
                <Icon />
              </IconButton>
            );
          })
        }
      </footer>
    </div>
    <figure class="relative flex size-32 shrink-0 overflow-hidden rounded-xl">
      <img
        class="aspect-square h-full w-full object-cover"
        src={image}
        alt={name}
      />
    </figure>
  </div>
</Section>

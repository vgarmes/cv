---
interface Props {
  link: string;
}

const { link } = Astro.props;
---

<a
  href={link}
  title="Drop me an email"
  target="_blank"
  rel="noopener noreferrer"
  class="inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-medium transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 border border-gray-200 text-gray-500 hover:text-gray-800 hover:bg-gray-100 size-8"
>
  <slot />
</a>
